/dts-v1/;

#include "imx8mp-qsxp-ml81.dts"
#include "imx8mp-qsxp-ml81-qsbase3.dtsi"

/ {
	model = "ovc-mini (Ka-Ro QSXP-ML81 QSBase3)";
};

&pcie {
	status = "okay";

	mvl_wifi: wifi@0,0 {
		compatible = "pci1b4b,2b42";
		reg = <0 0 0 0 0>;
		status = "okay";
	};
};

&pcie_phy {
	status = "okay";
};

&uart1 { /* BT */
	status = "okay";
};
